<div>
  <h2>User info</h2>
   <%= image_tag user.get_profile_image(100,100) %>
  <h3>name <%= user.name %></h3>
  <h3>introdaction <%= user.introduction %></h3>
  <% if user == current_user %>
    <p><%= link_to "edit", edit_user_path(user) %></p>
  <% else %>
    <p><%= link_to "edit", user_path(current_user) %></p>
  <% end %>
</div>

<%= form_with model: book do |f| %>
  <h2>New book</h2>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
<% end %>
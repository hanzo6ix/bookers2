<div>
  <%= flash[:notice] %>
</div>
<div>
  <h2>User info</h2>
   <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introdaction </h3>
  <% if @user == current_user %>
    <p><%= link_to "image", edit_user_path(@user) %></p>
  <% end %>
</div>

<%= render 'books/list', book: @book %>

<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    <p><%= book.user.name %></p>
    <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>
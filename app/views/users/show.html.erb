<div>
  <%= flash[:notice] %>
</div>

<%= render 'books/list', book: @book,user: @user %>

<h2>Books</h2>
<% @books.each do |book| %>
  <div>
    <%= link_to user_path(book.user.id) do %>
      <p><%= image_tag book.user.get_profile_image(100,100) %></p>
    <% end %>
    <%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
    <% end %>
    <p><%= book.body %></p>
  </div>
<% end %>